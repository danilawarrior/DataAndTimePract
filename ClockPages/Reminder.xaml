<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="DataAndTimePract.ClockPages.Reminder"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Reminder">

    <VerticalStackLayout Padding="10" Spacing="10">

        <Frame BackgroundColor="Black" BorderColor="Black" />

        <Entry x:Name="entRemind"
               HeightRequest="110" Placeholder="Напишите ваше напоминание." />

        <Label x:Name="lblName" Text="Выберите время напоминания" />

        <TimePicker x:Name="timePicker" />

        <Button Clicked="bttnok_Clicked" Text="Ок!" />

    </VerticalStackLayout>
</ContentPage>