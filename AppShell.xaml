<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="DataAndTimePract.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:DataAndTimePract.ClockPages"
       Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab>
            <ShellContent Title="Часы"
                          ContentTemplate="{DataTemplate local:ClockPage}"
                          Route="ClockPage" />
            <ShellContent Title="Секундомер"
                          ContentTemplate="{DataTemplate local:StopWatchPage}"
                          Route="StopWatchPage" />
            <ShellContent Title="Таймер"
                          ContentTemplate="{DataTemplate local:TimerPage}"
                          Route="TimerPage" />

        </Tab>
    </TabBar>



</Shell>
